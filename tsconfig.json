{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "paths": {
            "*": ["src/@types/*"],
            "@lib/*": ["src/lib/*"],
            "@logger": ["src/logger"]
        },
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2017"
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}